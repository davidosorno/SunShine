<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="today"
            type="com.dog.sunshine.data.weather.current.Current" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/defaultElevation">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="205dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/titleTextSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:setDay="@{today}"
            tools:text="Mon, May 15 2020" />

        <ImageView
            android:id="@+id/img_weather_icon"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:contentDescription="@string/weatherDescription"
            app:layout_constraintBottom_toBottomOf="@+id/txt_high_temperature"
            app:layout_constraintEnd_toStartOf="@+id/txt_high_temperature"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_high_temperature"
            app:setImage="@{today}"
            app:srcCompat="@drawable/ic_clear" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_weather_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/txt_low_temperature"
            app:layout_constraintEnd_toEndOf="@+id/img_weather_icon"
            app:layout_constraintStart_toStartOf="@+id/img_weather_icon"
            app:layout_constraintTop_toTopOf="@+id/txt_low_temperature"
            app:setDescription="@{today}"
            tools:text="Weather description" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_high_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="62sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/img_weather_icon"
            app:layout_constraintTop_toBottomOf="@+id/txt_date"
            app:setMaxTemp="@{today}"
            tools:text="30\u00b0" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_low_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="@+id/txt_high_temperature"
            app:layout_constraintStart_toStartOf="@+id/txt_high_temperature"
            app:layout_constraintTop_toBottomOf="@+id/txt_high_temperature"
            app:setMinTemp="@{today}"
            tools:text="18\u00b0"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>