<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/defaultTextSize</item>
        <item name="fontWeight">@dimen/defaultWeightText</item>
<!--        This line is very important when we are creating a settings activity-->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>

        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionBar.Sunshine.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/ic_logo</item>
    </style>

    <style name="AppTheme.Sunshine" parent="@style/AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Sunshine.NoTitle</item>
    </style>

    <style name="AppTheme.Detail" parent="Theme.AppCompat.DayNight">
        <item name="background">@color/detail_accent_pane_background</item>
    </style>

<!--    Labels on main screen-->
    <style name="fragmentLabels" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/middle</item>
        <item name="android:background">@drawable/text_view_round_corners</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:padding">2dp</item>
    </style>
</resources>